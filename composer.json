{
  "name": "vgrish/lost-orders-ms2",
  "type": "library",
  "license": "MIT",
  "version": "1.0.5",
  "description": "",
  "keywords": [
    "lost orders",
    "minishop",
    "MODX",
    "Revolution"
  ],
  "authors": [
    {
      "name": "Vgrish",
      "email": "vgrish@gmail.com"
    }
  ],
  "prefer-stable": true,
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Vgrish\\LostOrders\\MS2\\": "core/src/"
    },
    "classmap": [
      "core/src/"
    ]
  },
  "bin": [
    "bin/lost-orders-ms2"
  ],
  "require": {
    "php": ">=7.4",
    "ext-curl": "*",
    "ext-simplexml": "*",
    "ext-pdo": "*",
    "ext-json": "*",
    "vgrish/core-vendor-autoload-modx2": "^1.0",
    "symfony/console": "^5.4",
    "peppeocchi/php-cron-scheduler": "^4.0",
    "ramsey/uuid": "^4.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "jetbrains/phpstorm-attributes": "1.1",
    "friendsofphp/php-cs-fixer": "^3.5",
    "ergebnis/php-cs-fixer-config": "^6.33.0"
  },
  "scripts": {
    "coding-standards": [
      "php-cs-fixer fix --diff --show-progress=dots --verbose"
    ],
    "auto-scripts": {
      "dump:autoload": "composer dump-autoload --optimize"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ]
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
